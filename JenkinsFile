pipeline{
    agent any
    environment {
        PATH = "${PATH}:${getTerraformPath()}"
    }
    stages{
        stage('terraform init and apply - dev'){
            steps{
                sh "terraform workspace new dev"
                ssh "terraform init"
            }
        }
    }
}

def getTerraformPath {
    def tfHome = tool name: "terrafrom-12"
}